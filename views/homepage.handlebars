{{!-- GET's all posts to display when not logged in --}}
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{post.id}}">{{post.post_title}}</a>
    </h2>
    <p>Created by {{post.user.user_name}} on {{post.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.post_content}}
    </p>
  </div>
</div>
{{/each}}