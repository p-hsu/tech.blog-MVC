{{!-- template that will hold posts --}}
<div class="col s12 m6">
    <div class="card">
        <div class="card-content">
            {{!-- <a class="card-title orange-text text-darken-4" href="/posts/:id">BLOG TITLE HERE: USE {{post.post_title}}</a> --}}
            <a class="card-title orange-text text-darken-4" href="/posts/{{post_id}}">{{post_title}}</a>
            <p>
                {{post_content}}
            </p>
        </div>
        <div class="card-action">
            <p>Created by {{user.user_name}} on {{format_date createdAt}} 
            {{#if udpated}}
            <span> || Edited on {{updatedAt}}</span>
            {{/if}}
            </p>
        </div>
    </div>
</div>